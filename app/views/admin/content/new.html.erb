<% @page_heading = _('New article') %>

<%= render "admin/shared/edit", { 
  :form_type => "article", 
  :form_action => { 
                    :action => "new", 
                    :id => @article.id, 
                    :class => ('autosave')
                  }
} %>

<% if @profile_admin %>
<%= render "admin/shared/merge", { 
  :merge_form_type => "merge_article",
  :merge_form_action => {
                    :action => "merge",
                    :id => @article.id
                  }
} %>
<% end %>
